# Documentation available at:
# https://www.freedesktop.org/software/systemd/man/systemd.service.html

[Unit]
Description=Snap! Websites communicator daemon
Documentation=https://snapwebsites.org/project/communicator file:/usr/share/doc/communicator-doc/html/
After=network.target

[Service]
Type=simple
WorkingDirectory=/var/lib/communicator
ProtectHome=true
NoNewPrivileges=true
ExecStart=/usr/sbin/communicatord
ExecStop=/usr/bin/ed-stop --service "$MAINPID"
Restart=on-failure
RestartSec=1
# No auto-restart if configuration is invalid (exit code 9)
SuccessExitStatus=9
User=communicator
Group=communicator
LimitNPROC=1000
# For developers and administrators to get console output
#StandardOutput=tty
#StandardError=tty
#TTYPath=/dev/console
# Enter a size to get a core dump in case of a crash
#LimitCORE=10G

[Install]
WantedBy=multi-user.target

